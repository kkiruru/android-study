<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="16dp"
        tools:layout_marginHorizontal="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                tools:textColor="@color/color_212121"
                tools:ignore="SpUsage"
                android:text="서비스 변경이 예약됩니다."
                tools:text="서비스 변경이 예약됩니다."
                tools:textSize="18dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:ignore="SpUsage"
                android:text="먼저 결제가 가능한 다른 카드를 등록한 후, 다시 시도해보세요."
                tools:text="먼저 결제가 가능한 다른 카드를 등록한 후, 다시 시도해보세요."
                tools:textColor="@color/color_939393"
                tools:textSize="16dp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/single_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_16dp_bg_0ac290"
                android:gravity="center"
                android:paddingTop="15.4dp"
                android:paddingBottom="13.6dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="SpUsage"
                tools:text="확인"
                tools:visibility="gone" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/multi_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/multi_button_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/round_10dp_bg_efefef"
                    android:gravity="center"
                    android:paddingTop="15.4dp"
                    android:paddingBottom="13.6dp"
                    android:textColor="@color/gray700"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/multi_button_right"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="SpUsage"
                    tools:text="취소" />

                <TextView
                    android:id="@+id/multi_button_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/button_solid_r10_primary"
                    android:gravity="center"
                    android:paddingTop="15.4dp"
                    android:paddingBottom="13.6dp"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/multi_button_left"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage"
                    tools:text="삭제" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
